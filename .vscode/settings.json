// .vscode/settings.json
{
  // Требуется расширение "LaTeX Workshop"
  "latex-workshop.latex.autoBuild.run": "onSave",
  "latex-workshop.latex.recipe.default": "latexmk (lualatex, build->publish)",

  "latex-workshop.latex.tools": [
    {
      "name": "latexmk (lualatex, build->publish)",
      "command": "latexmk",
      "args": [
        "-pdf",
        "-auxdir=build",
        "-outdir=publish",
        "-lualatex",
        "main.tex"
      ],
      "env": {}
    }
  ],

  "latex-workshop.latex.recipes": [
    {
      "name": "latexmk (lualatex, build->publish)",
      "tools": [
        "latexmk (lualatex, build->publish)"
      ]
    }
  ]
}
